let dirs = [
    src     = './src',
    expect  = './expect'
];

let srcDirLoader    = scope.compile(dirs.src);
let expectDirLoader = scope.compile(dirs.expect);

Promise.all([srcDirLoader, expectDirLoader])
.then(#(files) {
    let results = [];
    let [srcFiles, expectFiles] = files;

    expectFiles.forEach(#(expect, i) {
        let value = srcFiles[i];

        results[] = expect(value);
    });

    console.log(results);
})
.catch(#(err) {
    console.log(err);
});