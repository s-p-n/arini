let test1 = {
	let say = (what) {
		console.log(what);
	};

	let greet = (who) {
		say("hello " + who);	
	};

	let adieu = (who) {
		say("farewell " + who);
	};

	greet("world");
	adieu("world");
};

let test2 = {
	let say = (...what) {
		console.log(...what);
	};
	let do = (f, ...args) {
		f(...args);
	};
	do(say, "do say,", "young chap!");
};

let test3 = {
