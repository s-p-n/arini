		public tag;
		public create = (attr) {
			tag = <div ...attr />;
		};
	};
	let attr = [
		id: "test3",
		class: "test",
		onclick: {
			console.log("clicked");
		}
	];
	let t = Tag();
	t.create(attr);
	t.tag.attributes.onclick();
};

